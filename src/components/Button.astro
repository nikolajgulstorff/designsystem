---
const {variant, size, text } = Astro.props;
---

<button class={variant + " " + size}><slot></slot></button>


<style>

button {
    padding: 8px 16px;
    font-weight: 600;
}

.primary {
    background-color: #FF5900;
    color: white;
    font-family: Noka, sans-serif;
    border-radius: 12px;
}

.primary:hover {
    background-color: #FF7A33;
    }
.secondary {
    background-color: none;
    color: #FF5900;
    font-family: Noka, sans-serif;
    border: 2px solid #FF5900;
    border-radius: 12px;
}

.secondary:hover {
    color: #FF7A33;
    border: #FF7A33;
}

.small {
    font-size: 1rem;    
}

.medium { 
    font-size: 25px;
}

.large {
    font-size: 2.625rem;
}

</style>