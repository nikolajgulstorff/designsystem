---
import Button from '../components/Button.astro';
---
<div class="flex flex-wrap justify-center gap-4">
    <!-- Første kort -->
    <div class="py-m px-m rounded-lg border font-body border-orange-500 w-[330px] mx-auto md:mx-0 md:flex-1">
      <div class="mb-8 relative">
        <h4 class="absolute top-1/4 left-1/3 transform -translate-x-1/2 -translate-y-1/2 text-black-50 text-1xl md:text-2xl font-title font-bold uppercase z-10">
          Australien <br> Japan <br> Bali <br> Gili Islands
        </h4>
        <img src="../img/aus.webp" alt="Elev" class="h-400 w-300">
        <div class="mt-4 flex justify-start">
          <Button variant="primary" size="small">Læs mere</Button>
        </div>
      </div>
    </div>
  
    <!-- Andet kort -->
    <div class="py-m px-m rounded-lg border font-body border-orange-500 w-[330px] mx-auto md:mx-0 md:flex-1">
      <div class="mb-8 relative">
        <h4 class="absolute top-1/4 left-1/3 transform -translate-x-1/2 -translate-y-1/2 text-black-500 text-1xl md:text-2xl font-title font-bold uppercase z-10">
          Costa Rica <br> Guatemala <br> Colombia <br> Ecuador <br> Bolivia <br> Peru
        </h4>
        <img src="../img/cos_salt.webp" alt="Elev" class="h-400 w-300">
        <div class="mt-4 flex justify-start">
          <Button variant="primary" size="small">Læs mere</Button>
        </div>
      </div>
    </div>
  
    <!-- Tredje kort -->
    <div class="py-m px-m rounded-lg border font-body border-orange-500 w-[330px] mx-auto md:mx-0 md:flex-1">
      <div class="mb-8 relative">
        <h4 class="absolute top-1/4 left-1/3 transform -translate-x-1/2 -translate-y-1/2 text-black-50 text-1xl md:text-2xl font-title font-bold uppercase z-10">
          Brazilien <br> Argentina <br> Colombia <br> Ecuador <br> Bolivia <br> Peru
        </h4>
        <img src="../img/brz.webp" alt="Elev" class="h-400 w-300">
        <div class="mt-4 flex justify-start">
          <Button variant="primary" size="small">Læs mere</Button>
        </div>
      </div>
    </div>
  
    <!-- Fjerde kort -->
    <div class="py-m px-m rounded-lg border font-body border-orange-500 w-[330px] mx-auto md:mx-0 md:flex-1">
      <div class="mb-8 relative">
        <h4 class="absolute top-1/4 left-1/3 transform -translate-x-1/2 -translate-y-1/2 text-black-50 text-1xl md:text-2xl font-title font-bold uppercase z-10">
          Maldiverne <br> Sri Lanka <br> Bali <br> Gili Islands
        </h4>
        <img src="../img/maldiv.webp" alt="Elev" class="h-400 w-300">
        <div class="mt-4 flex justify-start">
          <Button variant="primary" size="small">Læs mere</Button>
        </div>
      </div>
    </div>
  </div>
  
  
