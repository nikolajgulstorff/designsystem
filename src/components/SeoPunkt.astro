---
const { title, ikon, description} = Astro.props
---

<div class="max-w-lg flex items-start gap-4">
  <!-- Icon -->
  <div class="flex-shrink-0">
    <img src={ikon} alt="Teambuilding Icon" class="h-8 w-8">
  </div>

  <!-- Content -->
  <div>
    <h2 class="text-blue-800 font-bold font-title text-medium mb-xxs">{title}</h2>
    <p class="text-black-500 text-base font-body">{description}</p>
  </div>
</div>