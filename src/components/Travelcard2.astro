---
const { img, lande, lande1, lande2, lande3, lande4, lande5 } = Astro.props
import Button from '../components/Button.astro';
---

<!-- Første kort -->
<div class="py-m px-m rounded-lg border font-body border-orange-500 w-[330px] mx-auto md:mx-0 md:flex-1">
    <div class="mb-8 relative">
      <h4 class="absolute top-1/4 left-1/3 transform -translate-x-1/2 -translate-y-1/2 text-black-50 text-1xl md:text-2xl font-title font-bold uppercase z-10">
        {lande} <br> {lande1} <br> {lande2} <br> {lande3} <br> {lande4} <br> {lande5}
      </h4>
      <img src={img} alt="Foto" class="h-400 w-300">
      <div class="mt-4 flex justify-start">
        <Button variant="primary" size="small">Læs mere</Button>
      </div>
    </div>
</div>